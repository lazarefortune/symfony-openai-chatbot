{% extends 'base.html.twig' %}

{% block title %}🎅 Père noël raconte-moi une histoire{% endblock %}

{% block body %}
    <h1>🎅 Père noël raconte-moi une histoire</h1>

    {{ form_start(form) }}
    {{ form_row(form.theme) }}
    {{ form_row(form.submit, {
        label_html: true,
        label: '🎅 Raconte-moi une histoire ! <br>
         <span class="htmx-indicator">
            Un instant, le père noël est en train de préparer votre histoire.
            <img  src="/images/loader.svg" alt="loading" />
         </span>'
    }) }}
    {{ form_end(form) }}

    <div id="history"></div>

{% endblock %}
